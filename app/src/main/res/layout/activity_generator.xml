<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".activity.GeneratorActivity"
    tools:ignore="RtlHardcoded">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/activity_generator_result" />

            <include layout="@layout/activity_generator_hr" />

            <LinearLayout
                android:id="@+id/view_emoji_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_white"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="テキスト"
                    android:textColor="@color/color_blue_dark"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_view_emoji_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:gravity="top|center_horizontal"
                        android:text="@string/generator_text_placeholder"
                        android:textColor="@color/color_gray" />

                </FrameLayout>
            </LinearLayout>

            <include layout="@layout/activity_generator_hr2" />

            <include layout="@layout/view_generator_font" />

            <include layout="@layout/activity_generator_hr2" />

            <include layout="@layout/view_generator_text_color" />

            <include layout="@layout/activity_generator_hr2" />

            <include layout="@layout/view_generator_background_color" />

        </LinearLayout>

    </ScrollView>
</FrameLayout>