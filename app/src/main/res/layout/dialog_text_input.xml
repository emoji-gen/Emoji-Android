<?xml version="1.0" encoding="utf-8"?>
<moe.pine.emoji.view.generator.InputTextDialogView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="17dp"
    android:paddingRight="17dp"
    android:paddingTop="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="絵文字にするテキストを入力して下さい。"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/text_size_small" />

    <EditText
        android:id="@+id/edit_text_text_input"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:background="@drawable/shape_rounded_square_white_bordered_gray"
        android:gravity="center"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_size_medium">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button_text_input_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_blue"
        android:minHeight="34dp"
        android:text="@string/ok"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_medium" />
</moe.pine.emoji.view.generator.InputTextDialogView>