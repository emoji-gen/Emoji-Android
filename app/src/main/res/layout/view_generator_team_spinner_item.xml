<?xml version="1.0" encoding="utf-8"?>
<moe.pine.emoji.view.generator.TeamSpinnerItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    tools:ignore="RtlHardcoded">

    <ImageView
        android:id="@+id/image_view_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:layout_marginTop="6dp"
        android:src="@drawable/down_arrow" />

    <TextView
        android:id="@+id/text_view_generator_team_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/image_view_arrow_down"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_size_small" />
</moe.pine.emoji.view.generator.TeamSpinnerItemView>