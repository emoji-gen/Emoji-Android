<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Setting" />

    <style name="AppTheme.Setting.TableRow">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.Setting.HeadingCell">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="AppTheme.Setting.TextInput">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:background">@drawable/shape_rounded_square_white_bordered_silver</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minLines">1</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColorHint">@color/color_silver</item>
        <item name="android:textCursorDrawable">@drawable/shape_cursor_blue</item>
    </style>
</resources>