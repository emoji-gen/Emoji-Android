<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Generator" />

    <style name="AppTheme.Generator.MenuItem">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple_white</item>
    </style>

    <style name="AppTheme.Generator.MenuTitleText">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/color_blue_dark</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Generator.MenuColorPrefixText">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppTheme.Generator.MenuColorText">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
</resources>